{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "2.1",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["logic.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "images/*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
